{
  "version": 2,
  "rewrites": [
    { "source": "/login", "destination": "/api/login" },
    { "source": "/register", "destination": "/api/register" },
    { "source": "/dashboard", "destination": "/api/dashboard" },
    { "source": "/chat", "destination": "/api/chat" }
  ],
  "env": {
    "COSMOS_DATABASE": "mindmate",
    "AI_API_URL": "https://aiengine-sable.vercel.app",
    "DB_TYPE": "mongodb"
  },
  "build": {
    "env": {
      "MONGODB_CONNECTION_STRING": "@mongodb_connection_string"
    }
  }
}
